<div id="form_attachment">
  <h3 class="GenericFormLabel">To add a new attachment from the web, provide an URL.</h3>
  
  <%= form_with(model: [calendar, post, perspective, @attachment], local: true, html: { id: 'filename_form' }) do |form| %>
    <div class="field">
      <%= form.label :filename, "URL:", class: "GenericFormLabel" %>
      <%= form.text_field :filename, class: "InputField" %>
    </div>

    <div class="Bottom-right">
      <%= link_to 'Cancel', 'javascript:void(0)', class: "Btn-secondary", id: "cancel_link_filename" %>
      <%= form.submit "Save", class: "Btn-primary ml-2" %>
    </div>
  <% end %>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    $('#cancel_link').on('click', function() {
      $('#attachment_form')[0].reset();
    });
  });
</script>
