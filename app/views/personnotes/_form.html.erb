<%= form_with(model: [person, personnote], class: "contents") do |form| %>
  <% if personnote.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(personnote.errors.count, "error") %> prohibited this personnote from being saved:</h2>

      <ul>
        <% personnote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :note, class: "GenericFormLabel" %>
    <%= form.text_area :note, rows: 4, class: "TextArea block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="Bottom-right mb-4">
    <%= form.submit "Save Note", class: "Btn-primary ml-2" %>
  </div>
<% end %>