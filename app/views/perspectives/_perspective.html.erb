<div id="<%= dom_id(perspective) %>" class="text-gray-900">
  <div class="flex justify-between mt-2 mb-4">
    <div class="flex items-center space-x-4">
      <%= form_with url: update_status_post_calendar_post_perspective_path(@calendar, post, perspective), method: :patch, local: true, id: "status-form-#{dom_id(post)}" do %>
        <label class="font-medium text-sm mr-2">Post Status:</label>
        <select name="post[status]" id="selector_<%= dom_id(post) %>" class="InputField text-sm" onchange="this.form.submit()">
          <option value="approved" class="text-green-600" <% if post.status == "approved" %> selected <% end %>>Approved</option>
          <option value="in_analysis" class="text-yellow-600" <% if post.status == "in_analysis" %> selected <% end %>>In Analysis</option>
          <option value="rejected" class="text-red-600" <% if post.status == "rejected" %> selected <% end %>>Rejected</option>
        </select>
      <% end %>
      <%= form_with url: update_status_calendar_post_perspective_path(@calendar, @post, perspective), method: :patch, local: true, id: "status-form-#{dom_id(perspective)}" do %>
        <label class="font-medium text-sm mr-2">Perspective Status:</label>
        <select name="perspective[status]" id="selector_<%= dom_id(perspective) %>" class="InputField text-sm" onchange="this.form.submit()">
          <option value="approved" class="text-green-600" <% if perspective.status == "approved" %> selected <% end %>>Approved</option>
          <option value="in_analysis" class="text-yellow-600" <% if perspective.status == "in_analysis" %> selected <% end %>>In Analysis</option>
          <option value="rejected" class="text-red-600" <% if perspective.status == "rejected" %> selected <% end %>>Rejected</option>
        </select>
      <% end %>
    </div>
  </div>
  <div class="flex gap-4 mt-4 mb-4">
    <div class="w-1/3">
      <label class="GenericFormLabel">Social Media:</label>
      <div class="TextArea bg-white p-4 border border-gray-300 rounded-md overflow-y-auto h-40">
        <table class="min-w-full bg-white shadow-md rounded-lg border border-gray-200">
          <thead>
            <tr>
              <th class="TableHeader border-r border-gray-200">Platform</th>
              <th class="TableHeader">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @post.perspectives.each do |p| %>
              <tr class="hover:bg-gray-100">
                <td class="TableEntry border-r border-gray-200">
                  <% if p.socialplatform.present? %>
                    <strong><%= p.socialplatform.name %></strong>
                  <% else %>
                    <strong>Default Perspective</strong>
                  <% end %>
                </td>
                <td class="TableEntry flex items-center justify-end">
                  <span class="inline-block w-4 h-4 rounded" style="<%= case p.status when 'approved' then 'background-color: green;' when 'in_analysis' then 'background-color: yellow;' when 'rejected' then 'background-color: red;' else 'background-color: gray;' end %>"></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="w-2/3">
      <div class="mb-4 relative">
        <label class="GenericFormLabel">Copy:</label>
        <div class="TextArea h-40 bg-white p-4 border border-gray-300 rounded-md overflow-y-auto relative">
          <%= perspective.copy %>
          <div class="absolute top-2 right-2 flex items-center">
            <button id="copy-button" class="relative p-2 hover:bg-gray-100 rounded transition-all duration-200 ease-in-out" data-copy-text="<%= perspective.copy %>">
              <img src="<%= asset_path('copy.svg') %>" alt="Copy" class="w-4 h-4"/>
            </button>
            <span id="copy-message" class="mr-2 text-green-600 bg-gray-100 px-2 py-1 rounded-md text-xs opacity-0 absolute font-bold right-full top-2">Copied!</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    $('#copy-button').on('click', function() {
      var copyText = $(this).data('copy-text');
      
      var tempInput = $('<input>');
      $('body').append(tempInput);
      tempInput.val(copyText).select();
      document.execCommand('copy');
      tempInput.remove();

      $('#copy-message').css('opacity', '1');
      setTimeout(function() {
        $('#copy-message').css('opacity', '0');
      }, 2000);
    });
  });
</script>
