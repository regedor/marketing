<div id="<%= dom_id(perspective) %>" class="perspective">
  <!-- Display the content (copy) of the perspective -->
  <h3>Perspective:</h3>
  <p><strong>Copy:</strong> <%= perspective.copy %></p>

  <!-- Display the social platform if associated -->
  <% if perspective.socialplatform.present? %>
    <p><strong>Social Platform:</strong> <%= perspective.socialplatform.name %></p>
  <% end %>

  <!-- Display the status of the perspective -->
  <p><strong>Status:</strong> <%= perspective.status %></p>

  <!-- Display the timestamps -->
  <p><strong>Created at:</strong> <%= perspective.created_at.strftime("%B %d, %Y %I:%M %p") %></p>
  <p><strong>Last updated:</strong> <%= perspective.updated_at.strftime("%B %d, %Y %I:%M %p") %></p>

</div>
