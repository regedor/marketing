<%= form_with(model: pipeline, class: "contents") do |form| %>
  <% if pipeline.errors.any? %>
    <div class="text-red-500 mb-1">
      <ol class="list-decimal list-inside">
        <% pipeline.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <div class="flex items-center justify-center space-x-4 mb-4 w-full">
    <p class="w-full md:w-1/2">
      <%= form.label :name, class: "GenericFormLabel" %>
      <%= form.text_field :name, class: "InputField" %>
    </p>

    <p class="w-full md:w-1/2">
      <%= form.label :to_people, "Pipeline originates from people in the CRM?", class: "GenericFormLabel mr-2" %>
      <%= form.check_box :to_people, class: "CheckboxField" %>
    </p>
  </div>

  <div class="Bottom-right">
    <%= link_to "Cancel", 'javascript:history.back()', class: "Bottom-right Btn-secondary" %>
    <%= form.submit class: "Btn-primary ml-2" %>
  </div>
<% end %>
