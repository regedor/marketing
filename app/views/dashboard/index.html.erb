<h1>Dashboard</h1>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Organization</th>
      <th>isLeader</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.organization&.name || 'No Organization' %></td>
        <td><% if user.isLeader %>
              True
            <% else %>
              False
            <% end %>
        </td>
        <td><%= link_to 'Edit', edit_dashboard_user_path(user) %> | <%= link_to 'Info', dashboard_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New User', new_dashboard_user_path %>
