<div class="flex items-center justify-center min-h-screen">
  <div class="Container mx-auto w-10/12">

    <h1 class="PostHeading text-center mb-4">Settings</h1>

    <h3 class="HeaderContainer text-gray-700 text-xl text-center mb-6"><%= @users.first.organization&.name + '\'s' || '' %></h3>
    <div class="space-y-4">
      <%= render "notifications", organization: current_user.organization%>
      <%= render "users" %>
      <%= render "calendar", calendars: @calendars %>
      <%= render "pipeline", pipelines: @pipelines%>
    </div>
  </div>
</div>
