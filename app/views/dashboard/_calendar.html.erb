<div id="calendars">
  <div class="overflow-x-auto">
    <h2 class="ContainerHeaderText">Calendars</h2>
    <div class="flex justify-center">
      <table class="min-w-full bg-white shadow-md rounded-lg border border-gray-200">
        <thead>
        <tr>
          <th class="TableHeader border-r border-gray-200">Name</th>
          <th class="TableHeader border-r border-gray-200">Action</th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <% calendars.each do |calendar| %>
          <tr class="hover:bg-gray-100">
            <td class="TableEntry border-r border-gray-200"><strong><%= calendar.name %></strong></td>
            <td class="TableEntry space-x-2">
              <%= link_to "Edit", edit_calendar_path(calendar), class: "text-yellow-600 hover:text-yellow-500 hover:underline" %>
              <%= link_to "Delete", calendar_path(calendar), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-2 text-center">
    <%= link_to 'Create New Calendar', new_calendar_path, class: "Btn-primary" %>
  </div>
</div>
