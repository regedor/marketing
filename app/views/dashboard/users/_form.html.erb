<%= form_with(model: [:dashboard, user]) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <% if @organizations.present? %>
    <div>
      <%= form.label :organization_id, 'Organization' %>
      <%= form.collection_select :organization_id, @organizations, :id, :name, prompt: 'Select Organization' %>
    </div>
  <% end %>

  <div>
    <%= form.label :role %>
    <%= form.select :role, @roles , { include_blank: "Select Role" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>