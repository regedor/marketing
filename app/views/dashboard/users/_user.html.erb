<div id="<%= dom_id user %>">
  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Organization:</strong>
    <%= user.organization_id.present? ? user.organization.name : 'None' %>
  </p>

  <p>
    <strong>isLeader:</strong>
    <% if user.isLeader %>
      True
    <% else %>
      False
    <% end %>
  </p>
</div>
