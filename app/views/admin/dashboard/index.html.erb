<h1>Super Admin Dashboard</h1>

<h2>Organizations</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %> | <%= link_to 'Info', organization %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Organization', new_organization_path %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Organization</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.organization&.name || 'No Organization' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %> | <%= link_to 'Info', admin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New User', new_admin_user_path %>
