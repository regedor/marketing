<div class="flex items-center justify-center min-h-screen">
  <div class="Container w-full max-w-5xl px-8 mx-auto mt-16">

    <div class="HeaderContainer mb-8">
      <h1 class="ContainerHeaderText">People</h1>
    </div>

    <div id="people" class="overflow-x-auto mb-4">
      <table class="min-w-full bg-white shadow-md rounded-lg border border-gray-200">
        <thead>
          <tr>
            <th class="TableHeader border-r border-gray-200"> Name </th>
            <th class="TableHeader border-r border-gray-200"> Birthdate </th>
            <th class="TableHeader border-r border-gray-200"> Private </th>
            <th class="TableHeader border-r border-gray-200"> Action </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @people.each do |person| %>
            <tr class="hover:bg-gray-100">
              <td class="TableEntry border-r border-gray-200">
                <strong><%= link_to person.name, person, class: "hover:underline" %></strong>
              </td>
              <td class="TableEntry border-r border-gray-200"><%= person.birthdate %></td>
              <td class="TableEntry border-r border-gray-200"><%= person.is_private ? "Yes" : "No" %></td>
              <td class="TableEntry border-r border-gray-200">
                <%= link_to "Show", person, class: "Btn-primary ml-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="Bottom-right">
      <%= link_to "New person", new_person_path, class: "Btn-primary" %>
    </div>
  </div>
</div>
