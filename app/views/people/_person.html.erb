<div id="<%= dom_id person %>">
  <div class="flex items-center justify-center space-x-4 mb-4 w-full">
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Creator:</label>    
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.user.email %>" readonly>
    </p>
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Birthdate:</label> 
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.birthdate %>" readonly>
    </p>
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Is Private:</label> 
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.is_private ? "✅" : "❌"  %>" readonly>
    </p>
  </div>
  <div class="my-4">
    <p>
      <label class="GenericFormLabel">Linkedin link:</label>
      <div class="InputField bg-white text-blue-400 underline w-full p-2">
        <%= link_to person.linkedin_link, person.linkedin_link, target: :blank %>
      </div>
    </p>
  </div>


  <div>
    <label class="GenericFormLabel">Description:</label>
    <div class="Comment">
      <% if person.description.strip.empty? %>
        <p> No Description</p>
      <% else %>
        <% person.description.split("\n").each do |line| %>
          <p><%= line %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>