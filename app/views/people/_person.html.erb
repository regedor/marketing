<div id="<%= dom_id person %>">
  <div class="flex items-center justify-center space-x-4 mb-4 w-full">
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Name:</label>    
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.name %>" readonly>
    </p>
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Birthdate:</label> 
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.birthdate %>" readonly>
    </p>
    <p class="w-full md:w-1/3">
      <label class="GenericFormLabel">Description:</label> 
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.description %>" readonly>
    </p>
  </div>
  
  <div id="<%= dom_id person %>">
    <p class="my-4">
      <label class="GenericFormLabel">Is private:</label>
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.is_private %>" readonly>
    </p>

    <p class="my-4" data-url="<%= person.linkedin_link %>">
      <label class="GenericFormLabel">Linkedin link:</label>
      <input class="InputFieldReadOnly text-blue-400 underline" type="text" value="<%= person.linkedin_link %>" readonly>
    </p>

    <p class="my-4">
      <label class="GenericFormLabel">User:</label>
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.user.email %>" readonly>
    </p>

    <p class="my-4">
      <label class="GenericFormLabel">Organization:</label>
      <input class="InputFieldReadOnly text-gray-900 w-full" type="text" value="<%= person.organization_id %>" readonly>
    </p>
  </div>
</div>