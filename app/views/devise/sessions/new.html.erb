<div class="LoginSection">
  <div class="LoginContainer">
    <div class="LoginHeaderContainer">
      <h2 class="LoginHeaderText">Sign into your account</h2>
    </div>

    <div class="LoginFormContainer">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
        <div>
          <%= f.label :email, "Email", class: "LoginFormLabel" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "LoginFormInput" %>
          </div>
        </div>
        <div>
          <div class="ForgotPasswordContainer">
            <%= f.label :password, "Password", class: "LoginFormLabel" %>
            <div class="text-sm">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "ForgotPasswordLink" %>
            </div>
          </div>
          <div class="relative mt-2">
            <%= f.password_field :password, autocomplete: "current-password", required: true, id: "password-field", class: "LoginFormInput pr-10" %>
            <span id="toggle-password" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" onclick="togglePassword()">
              <img src="<%= asset_path('eye-icon.svg') %>" alt="Show/Hide Password" class="h-5 w-5" id="eye-icon" />
            </span>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "RememberMeCheckBox" %>
            <%= f.label :remember_me, "Remember me", class: "RememberMeLabel" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-4">
        <button type="button" id="google-login" class="btn-google w-full" onclick="toggleGoogleWarning()">
          <img src="<%= asset_path('google_icon.svg') %>" alt="Google Icon" class="h-5 w-5 mr-2" />
          Login with Google
        </button>
        <p id="google-warning" class="GoogleWarningText hidden">This feature is not available yet.</p>
      </div>

      <p class="SignupText">Wellbeing Warrior</p>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  function toggleGoogleWarning() {
    $('#google-warning').toggleClass('hidden');
  }

  function togglePassword() {
    const passwordField = $('#password-field');
    const eyeIcon = $('#eye-icon');

    if (passwordField.attr('type') === 'password') {
      passwordField.attr('type', 'text');
      eyeIcon.attr('src', '<%= asset_path('eye-cut.svg') %>');
    } else {
      passwordField.attr('type', 'password');
      eyeIcon.attr('src', '<%= asset_path('eye-icon.svg') %>');
    }
  }
</script>
