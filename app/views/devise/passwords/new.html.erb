<div class="LoginSection">
  <div class="LoginContainer">
    <div class="LoginHeaderContainer">
      <h2 class="LoginHeaderText">Forgot your password?</h2>
    </div>

    <div class="LoginFormContainer">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Email", class: "LoginFormLabel" %>
          <div class="mt-2 mb-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "LoginFormInput" %>
          </div>
        </div>

        <div>
          <%= f.submit "Send me reset password instructions", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <p class="SignupText">Wellbeing Warrior</p>
    </div>
  </div>
</div>
