<%= form_with(model: [pipeline,stage], class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :is_final %>
    <%= form.check_box :is_final, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :index%>
    <%= form.number_field :index %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
