<div class="HomeSection">
  <div class="LogoContainer">
    <%= image_tag 'ww-logo-black.svg', alt: 'Wellbeing Warrior', class: 'LogoImage' %>
  </div>
  <div class="TextContainer">
    <h1 class="WelcomeText">Welcome, <%= current_user.email %>!</h1>
    <% if current_user.organization.present? %>
      <p class="OrganizationText">
        You are part of the <u><%= current_user.organization.name %></u> organization as a 
        <span class="UserRole">
          <% if current_user.isLeader %>
            Leader
          <% else %>
            normal user
          <% end %>
        </span>
        .
      </p>
    <% end %>
  </div>
</div>
