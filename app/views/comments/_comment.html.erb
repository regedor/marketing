<div id="<%= dom_id(comment) %>" class="comment mb-1 p-2 rounded-md bg-gray-50">
  <div class="flex items-center justify-between mb-2">
    <p class="text-sm font-semibold text-gray-800"><%= comment.member.email %></p>
    <p class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <div class="mt-2 text-gray-700 leading-relaxed">
    <% comment.content.split("\n").each do |line| %>
      <p><%= line %></p>
    <% end %>
  </div>
</div>
