<%= form_with(model: [pipeline,pipeattribute], class: "contents") do |form| %>
  <% if pipeattribute.errors.any? %>
    <div class="text-red-500 mb-1">
      <ol class="list-decimal list-inside">
        <% pipeattribute.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "GenericFormLabel" %>
    <%= form.text_field :name, class: "InputField" %>
  </div>

  <div class="Bottom-right">
    <%= button_tag "Cancel", type: "reset", class: "Btn-secondary" %>
    <%= form.submit class: "Btn-primary ml-2" %>
  </div>
<% end %>
