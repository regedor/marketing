<div id="sidebar" class="Sidebar hidden fixed inset-y-0 left-0 w-56 bg-white text-gray-700 transform -translate-x-full transition-transform duration-300 ease-in-out">
  <div class="p-6">
    <ul>
      <li class="mt-8 mb-2 flex items-center">
        <%= image_tag 'home-icon.svg', class: 'SidebarIcon' %>
        <%= link_to "Home", root_path, class: "SidebarLink ml-2" %>
      </li>
      <% if user_signed_in? %>
        <% if current_user.isLeader %>
          <li class="mb-2 flex items-center">
            <%= image_tag 'dashboard-icon.svg', class: 'SidebarIcon' %>
            <%= link_to "Dashboard", dashboard_path, class: "SidebarLink ml-2" %>
          </li>
        <% end %>
        <li class="mb-2 flex items-center">
          <%= image_tag 'posts-icon.svg', class: 'SidebarIcon' %>
          <%= link_to "Posts", calendars_path, class: "SidebarLink ml-2" %>
        </li>
        <li class="flex items-center">
          <%= image_tag 'logout-icon.svg', class: 'SidebarIcon' %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" }, class: "SidebarLink ml-2" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
