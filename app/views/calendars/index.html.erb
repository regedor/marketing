<div id="calendars_page" class="p-4 flex flex-wrap flex-row md:flex-col">
  <div class="w-full md:w-1/4 p-4 bg-gray-100 rounded-lg shadow-md flex flex-col">
    <div class="mb-4">
      <%= link_to "Create New Post", selector_calendars_path, class: "Btn-primary w-full text-center" %>
    </div>
    <%= render "form", calendar: @calendar %>
    <div>
      <h2 class="text-lg font-bold mb-4">Calendars</h2>
      <%= form_with url: calendars_path, method: :get, local: true, id: "calendar_filter_form" do %>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white shadow-md rounded-lg border border-gray-200">
            <thead>
              <tr>
                <th class="TableHeader border-r border-gray-200">Select</th>
                <th class="TableHeader border-r border-gray-200">Calendar Name</th>
                <th class="TableHeader border-r border-gray-200">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @calendars.each do |calendar| %>
                <tr class="hover:bg-gray-100">
                  <td class="TableEntry border-r border-gray-200 text-center">
                    <%= check_box_tag "calendar_ids[]", calendar.id, params[:calendar_ids]&.include?(calendar.id.to_s) || params[:calendar_ids].nil?, class: "mr-2" %>
                  </td>
                  <td class="TableEntry border-r border-gray-200">
                    <%= label_tag "calendar_ids_#{calendar.id}", calendar.name, class: "flex-grow" %>
                  </td>
                  <td class="TableEntry border-r border-gray-200 text-center">
                    <%= link_to "Edit", edit_calendar_path(calendar), class: "text-blue-500 hover:underline mr-2" %>
                    <%= link_to "Delete", calendar_path(calendar), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= hidden_field_tag :start_date, @start_date %>
      <% end %>
    </div>
  </div>

  <div class="w-full md:w-3/4 md:p-4">
    <div class="flex justify-between items-center mb-4">
      <%= link_to "Previous Year", params.permit(:start_date, calendar_ids: []).merge(start_date: @start_date.prev_year), class: "text-blue-500 hover:underline" %>
      <%= link_to "Previous", params.permit(:start_date, calendar_ids: []).merge(start_date: @start_date.prev_month), class: "text-blue-500 hover:underline" %>
      <div class="text-lg font-bold text-gray-700">
        <%= @start_date.strftime("%B %Y") %>
      </div>
      <%= link_to "Next", params.permit(:start_date, calendar_ids: []).merge(start_date: @start_date.next_month), class: "text-blue-500 hover:underline" %>
      <%= link_to "Next Year", params.permit(:start_date, calendar_ids: []).merge(start_date: @start_date.next_year), class: "text-blue-500 hover:underline" %>
    </div>

    <%= month_calendar(events: @posts, attribute: :publish_date, previous_label: nil, next_label: nil) do |date, posts| %>
      <div class="post border p-2 relative overflow-hidden calendar-box text-gray-700 hover:bg-yellow-600 hover:text-white">
        <div class="date text-sm font-bold">
          <%= date.day %>
        </div>
        <div class="posts-container overflow-y-auto">
          <% if posts.any? %>
            <%= posts.length %>
          <% end %>
          <!-- Like https://github.com/excid3/simple_calendar, when clicking a box, a right side bar is opened showing all the posts of that day. -->
          <!-- <% posts.each do |post| %>
            <div class="mt-2 bg-blue-100 p-1 rounded text-xs text-blue-700">
              <%= link_to post.title, calendar_post_path(post.calendar, post), class: "hover:underline" %>
            </div>
          <% end %> -->
        </div>
      </div>
    <% end %>
  </div>

  <div id="modal_post" class="fixed inset-0 bg-gray-800 bg-opacity-75 hidden items-center justify-center">
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-xl font-semibold mb-4">Modal Title</h2>
      <p class="mb-4">This is the modal content.</p>
      <button id="closeModalBtn" class="bg-red-500 text-white px-4 py-2 rounded">
        Close Modal
      </button>
    </div>
  </div>

</div>

<style>
  .calendar-heading {
    display: none;
  }
  .posts-container {
    max-height: 6rem; /* Adjust this value as needed */
  }
  .calendar-box {
    height: 150px;
    width: 100%;
    box-sizing: border-box;
  }
</style>

<script>
$(document).ready(function () {
  // Open the modal when the button is clicked
  $('.post').on('click', function () {
    $('#modal_post').removeClass('hidden').addClass('flex');
  });

  // Close the modal when the close button is clicked
  $('#closeModalBtn').on('click', function () {
    $('#modal_post').addClass('hidden').removeClass('flex');
  });

  // Optional: Close the modal when clicking outside of the modal content
  $('#modal_post').on('click', function (e) {
    if ($(e.target).is('#modal')) {
      $('#modal_post').addClass('hidden').removeClass('flex');
    }
  });
});
</script>