<div id="calendars">
  <h1>Calendars</h1>
  <%= render "form", calendar: @calendar %>
  <div id="calendars_info">
    <table>
      <thead>
        <tr>
          <th>Calendar Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% calendars.each do |calendar| %>
          <tr>
            <td><%= calendar.name %></td>
            <td>
              <%= link_to "Edit", edit_calendar_path(calendar) %> |
              <%= link_to "Delete", calendar_path(calendar), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
