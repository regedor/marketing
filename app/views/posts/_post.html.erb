<div id="<%= dom_id(post) %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Design idea:</strong>
    <%= post.design_idea %>
  </p>
  
  <p>
    <strong>Categories:</strong>
    <%= post.categories.join(", ") %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>
  <p>
    <strong>Calendar:</strong>
    <%= post.calendar_id %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>
  <p>
    <strong>Publish date:</strong>
    <%= post.publish_date %>
  </p>
</div>
