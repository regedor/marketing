<div id="<%= dom_id(post) %>" class="text-gray-900">
  <div class="flex gap-4 mt-4 mb-4">
    <div class="w-1/3">
      <label class="GenericFormLabel">Categories:</label>
      <div class="TextArea bg-white p-4 border border-gray-300 rounded-md overflow-y-auto h-40">
        <ul class="list-disc pl-5">
          <% post.categories.each do |category| %>
            <li><%= category %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="w-2/3">
      <label class="GenericFormLabel">Design Idea:</label>
      <div class="TextArea h-40 bg-white p-4 border border-gray-300 rounded-md overflow-y-auto">
        <%= post.design_idea %>
      </div>
    </div>
  </div>
</div>
